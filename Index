        <section id="api-data">
            <h2>Quran Audio</h2>
            <div id="search-bar">
                <input type="text" id="searchInput" placeholder="Search Surah number (e.g., 1, 2, 10)...">
            </div>
            <div id="api-content">Loading Quran audio...</div>
        </section>
